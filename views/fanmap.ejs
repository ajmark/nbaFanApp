	<!-- Stylesheets -->
	<link rel="stylesheet" type="text/css" href="/css/style.css">
	<link rel="stylesheet" type="text/css" href="/css/fanmap.css">
	<title>NBA FanApp</title>
</head>
<body>
	<div id="selector">
		<h5>Navigate</h5>
	</div>
	<div class="side-nav">
		<div id="navigation">
			<h3>Navigate to...</h3>
			<ul>
				<li><a href="/">League News &raquo;</a></li>
				<li><a>Fan Map &raquo;</a></li>
			</ul>
		</div>
	</div>

	<div id="content-wrapper">
		<div class="main-content">
			<header>
				<a href="http://espn.go.com/nba/" target="_blank"><img id="espn" src="http://a.espncdn.com/i/apis/attribution/espn-grey_50.png"></a>
				<h1>The Unofficial</h1>
				<img id="logo" src="/assets/logo.png">
				<h1>Fan App</h1>
			</header>

			<h1 id="title">Fan Map</h1><br />
			<p>Use the Fan Map to see NBA fans across the country and who their favorite teams are. Submit your location by <a href="#" onclick="getLocation()">clicking here</a>. (Give it a few seconds to load)</p> <br />
			<!-- popup -->
			<div id="cookie-popup" style="position: relative;">
			  <div id="popup-dialog-cookie" class="popup-dialog">
			    <div class="popcls"><a onclick="closepop();return false;" href="#">close</a></div>
			      <p>Please select your favorite team</p>
			      <form>
			      <select id="favteam-select">
